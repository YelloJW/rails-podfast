
<div class="container">

  <div class="playlist-title">
    <i class="highlighted highlighted-orange">Saved pods</i>
    <button type="button" class="create-new-playlist" data-toggle="modal" data-target=".bd-example-modal-sm">+</button>
  </div>

  <%= render 'create_new_playlist_modal' %>

  <% @playlists.each do |playlist|%>
    <%= link_to playlist_path(playlist), class: "playlist-list-card" do  %>
      <div class="playlist-title">
        <h4><%= playlist.name %></h4>
      </div>
      <div class="playlist-info">
        <p><%= playlist.episodes.count %> episodes</p>
          <% sum = 0 %>
          <% playlist.episodes.each do |episode| %>
            <% sum += episode.length %>
          <% end %>
        <p> <%= sum %> minutes </p>
      </div>
    <% end %>
  <% end %>
</div>
