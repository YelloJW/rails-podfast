<div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="container">
        <%= simple_form_for @playlist, url: user_playlists_path(current_user), method: :post do |f| %>
          <%= f.text_field :name, class: "create-new-playlist-form" %>
          <%= f.button :submit, "Add", class: "button-podfast-custom" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
