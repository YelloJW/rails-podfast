<div class="container" style="padding-top: 60px;">

  <%= render "shared/spotifywidget", episode: @episode %>

  <div class="icons_card">
    <%= social_share_button_tag('Share to', :allow_sites => %w(whatsapp_app twitter facebook), :url => "https://podfast-joeolley.herokuapp.com/episodes/#{@episode.id}", :image => "#{@episode.img_url}", desc: "#{@episode.summary}") %>
    <% if user_signed_in? %>
        <div class="show-button d-flex align-items-center justify-content-between">
          <%= link_to like_episode_path(@episode), class: "like mr-2", method: :put do %>
            <i class="far fa-thumbs-up"></i><%= @episode.votes_for.size + @episode.upvotes %>
          <% end %>
          <i class="fas fa-headphones"></i><%= @episode.listens %>
        </div>
    <% else %>
        <div class="show-button d-flex align-items-center justify-content-between">
          <%= simple_form_for :login, url: new_user_session_path, html: { class: 'like-form mr-2 d-flex', id:'like-form' } do |f| %>
            <%= f.button :button, type: :submit, class:'primary-color' do %>
              <i class="far fa-thumbs-up"></i><%= @episode.votes_for.size + @episode.upvotes %>
            <% end %>
          <% end %>
          <i class="fas fa-headphones"></i>
          <%= @episode.listens %>
        </div>
    <% end %>
  </div>

  <div class="description-card">
    <h2><b><%= @episode.title %></b></h2>
    <p><%= @episode.summary %></p>
  </div>

</div>
<%= content_for(:after_js) do %>
  <%= javascript_pack_tag 'sweetalert2' %>
<% end %>
