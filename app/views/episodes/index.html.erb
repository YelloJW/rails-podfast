<div class="container">
  <% @episodes.each do |episode| %>
    <%= link_to episode_path(episode) do %>
      <div class="row episode-card">
        <img src="https://images.unsplash.com/photo-1487537023671-8dce1a785863?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80">
        <div class="card-details">
          <h5><%= episode.title %></h5>
          <p><%= episode.summary.first(35) %>...</p>
          <div class="card-tags">
            <% episode.tags.each do |tag| %>
              <p>#<%= tag.tag %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>





<%= render 'shared/navbar-podfast' %>
